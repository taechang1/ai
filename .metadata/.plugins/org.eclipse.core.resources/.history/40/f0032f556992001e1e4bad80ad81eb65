package javaBasic.ch01.sec15;

public class DataTypeEx {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//자료형-기본형(정수형,실수형 논리형 문자형)
		//교재39쪽
		//정수처리
		byte b1=127; //-128~127까지 가능
		System.out.println(b1);
		
		short s1= 32767;//-32768~32767
		long  lo1  =900000000000000l;
		
		
		byte b2=10;
		byte b3=20;
        int b23=b2+b3;
        double d3=3.14;
        double d4=12.65;
        double muld3d4= d3*d4;
        System.out.println(muld3d4);
        //float muld3d4f=d3*d4; 에러발생 왜? 작은타입으로 넣어주니깐
       // double resulf3f4 =f3/f4;//float 자료형이 doble형으로 변환됨- 형변환 cash연산 자동 형변환
      //실수형> 정수형 데이터 손실 
      		//형식 정수형 타입 변수명=(정수형 타입 )실수형 변수
        double d10=3.14;
        int chang10=(int)d10; //소수점 0.14 손실했다
        System.out.println(d10+""+chang10);
        float f10=10.25f;
        byte change10=(byte)f10;
        int i10=3000;
        short chi10=(short)i10;
        //문 정수형으로 국어 수학 영어 점수 변수 담으세요.
        int kor=80;
        int mat=90;
        int eng=83;
        //합계 구하기
        int sum=kor+mat+eng;
        //평균구하기
        double avg= sum/3.0;
        double avg1= (double)(sum)/3.0;//3을 연산하면 정수/정수이므로 정수만 나온다
        //수학점수의 거듭제곱90**
        mat=90;
        int matDouble=mat*mat;
        //
        //출력하기
        System.out.println("합계는"+sum);
        System.out.println("평균은"+avg);
        System.out.println("평균은"+avg1);
        char ch1='a';
        System.out.println((int)ch1);
        System.out.printf("%c",ch1+3);//"%c"는 문자형으로 ch1+3의 100 유니코드숫자를 문자형으로 출력하기
	}

}

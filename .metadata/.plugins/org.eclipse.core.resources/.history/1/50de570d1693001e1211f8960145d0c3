package javaBasic.ch03.sec02;

import java.util.Scanner;

public class 산술연산자 {

	public static void main(String[] args) {

           Scanner sc= new Scanner(System.in);
//           //이름은?
//           국어점수는?
//           영어점수는?
//           수학점수는?
           //추력
           System.out.println("이름은?");
           String name=sc.next();
           System.out.println();
           
           System.out.println("국어점수?");
           int kor=sc.nextInt();
           System.out.println();
           System.out.println("영어점수?");
           int eng=sc.nextInt();
           System.out.println();
           System.out.println("수학점수?");
           int mat=sc.nextInt();
           System.out.println();
           
           System.out.println(name+" "+kor+" "+eng+" "+mat);
           
           //합계 구하기
           int sum= kor+eng+mat;
           //국어 합계차 = 합계 -국어점수
           int sumkor=sum-kor;
           // 평균=합계/3 실수형으로 만들기
           
           double avg= sum/3.0;
           //수학점수 홀수 입니까 짝수입니까 2의 배수면 짝수 아니면 홀수
           //%나머지를 구함
           int matMod=mat%2;
           System.out.println(sum+" "+sumkor+" "+avg+" "+matMod);
        
//           int kor =sc.nextInt();
//           System.out.println(kor);
//           
//           double rete=sc.nextDouble();
//           System.out.println(rete);
//           
//           //true입력하기
//           boolean dx=sc.nextBoolean();
//           System.out.println(dx);
//           //홍길동 이름 입력 출력
//           String name=sc.next();
//           System.out.println(name); 드래그 컨트롤 슬레쉬 전체 주석
           
	}

}

package javaBasic.ch04.sec02;

public class While문연습 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 246810 출력해 보기
		//2를 정수형 변수에 넣기
		//정수형 변수를 2씩 더한다
		//반복해서 출력한다
		//10이 넘으면 좋료한다
		
		int n=2;
		while(n<=10) {
			
			System.out.println(n);//2
			n=n+2;
		}
		//do while문
		/*do ~while문
		 * do{
		 //반본할 내용
		 }while(조건식);
		*/
		//1234 ...10까지 나오게

		int n2=1;
		do{
			System.out.println(n2);
			n2++;
		}while(n2<=10);
		
		//10 9 8 7 6..32 1
		int n3=10;
		do {
			System.out.println("n3");
			n3--;
		}while(n3>=1);
		//2468 
		
		//5 10 15 20 ...100출력하기
		System.out.println("-----");
		int n5=5;
		do {
			System.out.println(n5);
			n5=n5+5;
		}while(n5<=100);
		//for문
		/* for(초기값;조건식;증가값{
		 *    반복할 내용들
		 *    };
		 */
		//123..10출력하기
		for(int i=1;i<=10;i++) {
			System.out.println(i);
		}
		//1~50출력하기
		for(int j=1;j<=50;j++) {
			System.out.println(j);
			//50~1출력하기
		}
		for(int k=50;k>=1;k--) {
			System.out.println(k);
		}
		//변수2개를 사용해서 1~10 10~19
		for(int i=1,j=10;i<=10||j<=19; i++,j++) {
			System.out.println(i+" "+j);
		}
	//변수 3개를 사용해서 1~100 100~1 200~300
		for(int i =1,j=100,k=200;i<=100||j>=1||k<=300; i++,j--,k++) {
			System.out.println(i+ " "+j+" "+k);
		}
		
		for(int i=1; i<=3;i++) {
			System.out.println(i);
			for(int j= i ;j<=i+1;j++) {
				System.out.print(j+" ");
		}
			System.out.println();// 반복문 for 안에 for를 넣었다
			
	}
		//10
		//1098
		//11
		//11 10 9
		
	    }
	}
		}
	}



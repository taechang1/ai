package javaBasic.ch03.sec02;

public class while문 {

	public static void main(String[] args) {
		// 반복문
		//형식 while(조건){참이면 수행할 문장}
		//1~100출력하기
		//수자 변수 만들어 1 출력하기 ->변수+1=>출력
		//1 2
		int number=1;
		System.out.println(number);
		
		while(number<100)//1부터 100까지면 참이되게 코드 작성
		 number++;
		
		System.out.println(number);
		 //10 20 30 40 ..100
		int number2=10;
		
		while(number2<=100) {
	    System.out.println(number2);
	    number2+=10;//nx +nx+10 
	    
		}
		//100 90 80 70 .. -1- -20출력하기
	    int number3=100;
	    while(number3>-30) {
	    	System.out.println(number3);
	    	number3-=10;
	    }
	    //1~20까지 출력
	    int number4=1;
	    while(number4<=20) {
	    	number4++;
	    	if(number4%5==0){ System.out.println(number4); }
	    	
	    	// continue는 반복문을 계속해라 단 , 아래 문장은 건너 뛰어라
	    	else{continue;}
	    	
	    }
	   //1~100까지 합계 답은 5050이다.
	   int number5=1;
		while(number5<=100) {
			sum+=number5;
			System.out.println(number5+"");
			number5++;
		}
	    
	   //1~100 까지 중에서 합계가 3000이 넘으면 하고 숫자와 합계를 찍으세요
		
	    
	    
	}
   
}
 
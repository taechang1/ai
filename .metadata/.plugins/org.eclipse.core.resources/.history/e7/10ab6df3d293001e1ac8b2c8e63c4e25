package javaBasic.ch03.sec03;

import java.util.Scanner;

public class 복습문제 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc=new Scanner(System.in);
		    //1단계 입력을 받는다. 키보드 입력할 수 있는 클래스 사용
				System.out.println("화씨를 섭씨로,섭씨를 화씨로 바꾸기---");
				System.out.println("문자를 입력하세요?(C,F)");
				String word=sc.next();
				System.out.println("바꾸려는 온도를 입력하세요.");
				int temperature=sc.nextInt();
				
				//2단계 문자가"C"인지 "F" 인지를 판단하기
				if(word.equals("C")||word.equals("c")) {
					//섭씨를 화씨로 고치기
					result=(9.0/5.0)*temperature+32;
				}else if(word.equals("F")||word.equals("f") ) {
					//화씨를 섭씨로 고치기
					result=(5.0/9.0)*temperature+32;
				};
				//4단계 결과 출력하기
				System.out.println("정답은"+result);
		
	}

}
